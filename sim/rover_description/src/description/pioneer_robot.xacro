<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="multi_rover">
  <xacro:arg name="x_pos" default="0.0"/>
  <xacro:arg name="y_pos" default="0.0"/>
  <xacro:arg name="t_pos" default="0.0"/>
  <xacro:arg name="robot_id" default="p1"/>
  <xacro:arg name="mesh_enabled" default="true"/>

  <link name="world"/>

  <xacro:macro name="p_instance" params="robot_id x y theta">
      <link name="${robot_id}_base_link"/>
      <link name="${robot_id}_x_axis"/>
      <link name="${robot_id}_y_axis"/>
      <link name="${robot_id}_theta_axis"/>

      <link name="${robot_id}_rover_link">
        <inertial>
          <origin xyz="0.0 0 0.0" rpy="0 0 0"/>
          <mass value="3.978"/>
          <inertia ixx="0.021858680" ixy="0.0" ixz="0.010020353"
                    iyy="0.078572349" iyz="0.0"
                    izz="0.091971324"/>
        </inertial>
        <visual>
          <xacro:if value="$(arg mesh_enabled)">
            <origin xyz="-0.1 0.3 -0.5" rpy="0.0 0.0 0.0"/>
            <geometry>
              <mesh filename="package://rover_description/meshes/pioneer_3dx.stl"
                    scale="0.001 0.001 0.001"/>
            </geometry>
          </xacro:if>
        </visual>
      </link>

      <joint name="${robot_id}_w_to_x" type="prismatic">
        <parent link="world"/>
        <child link="${robot_id}_x_axis"/>
        <axis xyz="1 0 0"/> 
        <origin xyz="${x} 0.0 0.0" rpy="0 0 0" />
        <limit lower="-20.0" upper="20.0" effort="0.5" velocity="0.5"/>
      </joint>
      <joint name="${robot_id}_x_to_y" type="prismatic">
        <parent link="${robot_id}_theta_axis"/>
        <child link="${robot_id}_y_axis"/>
        <axis xyz="0 1 0"/> 
        <origin xyz="0.0 ${y} 0.0" rpy="0 0 0" />
        <limit lower="-20.0" upper="20.0" effort="0.5" velocity="0.5"/>
      </joint>
      <joint name="${robot_id}_y_to_t" type="revolute">
        <parent link="${robot_id}_y_axis"/>
        <child link="${robot_id}_base_link"/>
        <axis xyz="0 0 1"/>
        <origin xyz="0.0 0.0 0.0" rpy="${theta} ${theta} ${theta}" />
        <limit lower="-3" upper="3" effort="0.5" velocity="0.5"/>
      </joint>
      <joint name="${robot_id}_t_to_b" type="fixed">
        <parent link="${robot_id}_x_axis"/>
        <child link="${robot_id}_theta_axis"/>
      </joint>

      <joint name = "${robot_id}_base_joint"  type = "fixed">
          <parent link="${robot_id}_base_link"/>
          <child link="${robot_id}_rover_link"/>
          <origin xyz="0.0 0.0 0.5" rpy="0 0 0" />
          <axis xyz="0 0 0" rpy="0 0 0" />
      </joint>
  </xacro:macro>

  <xacro:p_instance robot_id="$(arg robot_id)" x="$(arg x_pos)" y="$(arg y_pos)" theta="$(arg t_pos)"/>
</robot>
